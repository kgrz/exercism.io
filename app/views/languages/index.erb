<div id="languages">
  <div class="container-fluid">
    <section class="page-header">
      <h1>Languages</h1>
    </section>
    <% active.each_slice(6) do |tracks| %>
      <div class="row">
        <% tracks.each do |t| %>
          <%= erb :'languages/_block', locals: { track: t, completed: completed[t.slug] } %>
        <% end %>
      </div>
    <% end %>

    <section class="page-header">
      <h3>Upcoming</h3>
    </section>
    <% inactive.each_slice(6) do |tracks| %>
      <div class="row">
        <% tracks.each do |t| %>
          <%= erb :'languages/_block', locals: { track: t, completed: completed[t.slug] }  if t.problems.any? %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
